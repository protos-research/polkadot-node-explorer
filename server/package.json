    "axios": "^0.19.0",
    "cron": "^1.7.0",
    "express": "^4.16.4",
    "geoip-lite": "^1.3.7",
    "graphql": "^14.2.1",
    "graphql-import": "^0.7.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^3.0.0",
    "graphql-shield": "^7.0.9",
    "graphql-tools": "^4.0.3",
    "lodash": "^4.17.19",
    "redis": "^2.8.0",
    "winston": "^3.2.1"
