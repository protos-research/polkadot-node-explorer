    "apollo-server-testing": "^2.4.8",
    "jest": "^24.7.1",
    "jest-snapshot": "^24.7.1",
    "mock-socket-with-protocol": "^7.1.1",
    "nodemon": "^1.18.11",
    "subscriptions-transport-ws": "^0.9.16",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
